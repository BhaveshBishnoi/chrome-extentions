{
  "manifest_version": 3,
  "name": "CSS Inspector & Live CSS Playground",
  "version": "1.0.0",
  "description": "Inspect, modify, and experiment with CSS styles directly on the client side without opening DevTools.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/utils/cssParser.js",
        "content/utils/storage.js",
        "content/history.js",
        "content/editor.js",
        "content/ui/highlighter.js",
        "content/ui/editors.js",
        "content/ui/panel.js",
        "content/inspector.js"
      ],
      "css": [
        "content/styles/panel.css",
        "content/styles/highlighter.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
